{
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "airbnb",
      "prettier"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": ["src"]
        }
      }
    },
    "plugins": [
      "react",
      "prettier"
    ],
    "rules": {
      "react/jsx-filename-extension": [1, {"extensions": [".js", ".jsx"]}],
      "no-use-before-define": "off",
      "prettier/prettier": "error"
    },
    "overrides": [
      {
        "files": ["src/serviceWorker.js"],
        "rules": {
          "no-console": "off",
          "no-param-reassign": "off"
        }
      }
    ]
}
